# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
VITE_APP_NAME=Calabasas Network Platform
VITE_APP_URL=https://172.20.120.46
VITE_API_URL=https://172.20.120.46/api

# Network Configuration
VITE_LOCAL_IP=172.20.120.46
VITE_LOCAL_PORT=443
VITE_DEV_PORT=5173

# ===========================================
# FEATURE FLAGS
# ===========================================
# Habilitar/desabilitar módulos
VITE_ENABLE_SIMULATION_MODULE=true
VITE_ENABLE_NETWORK_MODULE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_3D_VISUALIZATION=false
VITE_ENABLE_REAL_TIME_MONITORING=true

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================
# Intervalo de polling para métricas (ms)
VITE_POLLING_INTERVAL=30000

# Timeout para requisições (ms)
VITE_REQUEST_TIMEOUT=10000

# Habilitar Service Worker
VITE_ENABLE_SERVICE_WORKER=false

# Tamanho do cache (MB)
VITE_CACHE_SIZE_MB=50

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
# Habilitar logging de autenticação
VITE_ENABLE_AUTH_LOGGING=true

# Modo mock para autenticação (apenas dev)
VITE_ENABLE_MOCK_AUTH=false

# Session timeout (minutos)
VITE_SESSION_TIMEOUT=60

# JWT expiration (horas)
VITE_JWT_EXPIRATION=24

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
# Nível de log: debug | info | warn | error
VITE_LOG_LEVEL=debug

# Habilitar debug do Redux
VITE_REDUX_DEBUG=true

# Habilitar source maps
VITE_SOURCE_MAPS=true

# ===========================================
# INTEGRATIONS (Opcional)
# ===========================================
# SNMP Configuration (para descoberta de dispositivos)
VITE_SNMP_ENABLED=false
VITE_SNMP_COMMUNITY=public
VITE_SNMP_VERSION=2c

# Email Configuration (para alertas)
VITE_EMAIL_ENABLED=false
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=
VITE_SMTP_PASS=

# Webhook Configuration (para notificações)
VITE_WEBHOOK_ENABLED=false
VITE_WEBHOOK_URL=

# ===========================================
# NETWORK DEVICES (Opcional)
# ===========================================
# Credenciais padrão para dispositivos
# ATENÇÃO: Use apenas em desenvolvimento local!
VITE_DEFAULT_DEVICE_USER=admin
VITE_DEFAULT_DEVICE_PASS=

# ===========================================
# ANALYTICS & MONITORING (Opcional)
# ===========================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry (Error Tracking)
VITE_SENTRY_DSN=

# Prometheus (Metrics)
VITE_PROMETHEUS_ENABLED=false
VITE_PROMETHEUS_PORT=9090

# ===========================================
# BACKUP & RESTORE
# ===========================================
# Diretório de backup
BACKUP_DIR=/opt/calabasas/backups

# Retenção de backups (dias)
BACKUP_RETENTION_DAYS=30

# Horário de backup automático (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Habilitar React DevTools
VITE_REACT_DEVTOOLS=true

# Habilitar Redux DevTools
VITE_REDUX_DEVTOOLS=true

# Habilitar hot reload
VITE_HMR=true

# Port para dev server
VITE_PORT=5173

# ===========================================
# OBSERVAÇÕES IMPORTANTES
# ===========================================
# 1. Variáveis com prefixo VITE_ são expostas ao frontend
# 2. Nunca exponha credenciais sensíveis com prefixo VITE_
# 3. Para produção, use variáveis de ambiente do sistema
# 4. Mantenha uma cópia deste arquivo como .env.example
# 5. Adicione .env ao .gitignore
