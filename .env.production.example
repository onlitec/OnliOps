# ===========================================
# ONLIOPS PRODUCTION ENVIRONMENT
# ===========================================
# Domain: onliops.onlitec.com.br
# Deploy via Portainer Stack
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=onliops
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=onliops

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
VITE_APP_NAME=OnliOps Platform
VITE_APP_URL=https://onliops.onlitec.com.br
VITE_API_URL=https://onliops.onlitec.com.br/api

# ===========================================
# AI CONFIGURATION
# ===========================================
# Modelo local Ollama (padrão)
AI_MODEL=phi3

# APIs Externas (opcional - descomente se necessário)
# OPENAI_API_KEY=sk-xxx
# GROQ_API_KEY=gsk_xxx
# OPENROUTER_API_KEY=xxx

# ===========================================
# SUPABASE (opcional - para autenticação)
# ===========================================
# Descomente e configure se usar Supabase para auth
# VITE_SUPABASE_URL=https://seu-projeto.supabase.co
# VITE_SUPABASE_ANON_KEY=sua-chave-aqui

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_SIMULATION_MODULE=true
VITE_ENABLE_NETWORK_MODULE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_3D_VISUALIZATION=false

# ===========================================
# PERFORMANCE
# ===========================================
VITE_POLLING_INTERVAL=30000
VITE_REQUEST_TIMEOUT=10000

# ===========================================
# SECURITY (IMPORTANTE!)
# ===========================================
# Timeout de sessão em minutos
VITE_SESSION_TIMEOUT=60

# Logging level: error | warn | info | debug
VITE_LOG_LEVEL=warn

# Desabilitar ferramentas de desenvolvimento
VITE_REACT_DEVTOOLS=false
VITE_REDUX_DEVTOOLS=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_DIR=/var/backups/onliops
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
