[Unit]
Description=OnliOps Webhook Listener
After=network.target docker.service
Requires=docker.service

[Service]
Type=simple
User=alfreire
WorkingDirectory=/home/alfreire/docker/apps/onliops
Environment="WEBHOOK_SECRET=onliops-webhook-secret-2024"
ExecStart=/usr/bin/python3 /home/alfreire/docker/apps/onliops/webhook-listener.py
Restart=always
RestartSec=10
StandardOutput=append:/home/alfreire/docker/apps/onliops/webhook.log
StandardError=append:/home/alfreire/docker/apps/onliops/webhook.log

[Install]
WantedBy=multi-user.target
